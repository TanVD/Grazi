<idea-plugin>
    <id>tanvd.grazi</id>
    <name>Grazi</name>
    <vendor>TanVD</vendor>
    <vendor email="vdtankov@gmail.com" url="https://github.com/TanVD">Vladislav Tankov</vendor>
    <description><![CDATA[
        This plugin provides proofreading and grammar checking inspection for dozen of languages,
        including English, German, Russian and about 25 others.

        <br/>

        It works with IntelliJ built-in spellchecker to improve the quality of any
        natural-language texts written using IntelliJ Platform IDE.

        <br/>

        The plugin supports as a source of natural language: JavaDocs, KotlinDocs, Markdown,
        Plaintext and comments.

        <br/>

        Under the hood, it uses one of the leading proofreaders â€” LanguageTool, so it provides one of the
        best performance and accuracy among free (and even non-free) alternatives

        <br/>

        Note, that all verification is performed locally, inside your IDE. The plugin does not
        send any of your data anywhere.
    ]]></description>

    <depends optional="true">org.intellij.plugins.markdown</depends>
    <depends optional="true">org.jetbrains.kotlin</depends>

    <application-components>
        <component>
            <implementation-class>tanvd.grazi.GraziSettingsComponent</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="tanvd.grazi.grammar.GrammarEngine"/>
        <applicationService serviceImplementation="tanvd.grazi.GraziApplicationSettings"/>

        <localInspection displayName="Grazi proofreading inspection" groupName="Grazi" enabledByDefault="true"
                         shortName="GraziInspection" implementationClass="tanvd.grazi.ide.GraziInspection" level="TYPO"/>

        <applicationConfigurable groupId="tools" instance="tanvd.grazi.GraziToolConfigurable"
                                 id="reference.settingsdialog.project.grazi"
                                 key="grazi.name" bundle="messages.Grazi"/>

    </extensions>

    <extensionPoints>
        <extensionPoint qualifiedName="tanvd.grazi.languageSupport" interface="tanvd.grazi.ide.language.LanguageSupport"/>
    </extensionPoints>

    <extensions defaultExtensionNs="tanvd.grazi">
        <languageSupport implementation="tanvd.grazi.ide.language.PlainTextSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.JavaDocSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.KDocSupport"/>
        <!--        <languageSupport implementation="tanvd.grazi.ide.language.HtmlSupport"/>-->
        <languageSupport implementation="tanvd.grazi.ide.language.MarkdownSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.CommentsSupport"/>
    </extensions>
</idea-plugin>
