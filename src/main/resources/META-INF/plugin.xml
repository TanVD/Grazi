<idea-plugin>
    <id>tanvd.grazi</id>
    <name>Grazi</name>
    <vendor email="vdtankov@gmail.com" url="https://github.com/TanVD">Vladislav Tankov</vendor>

    <description><![CDATA[
        Grazi is a proofreader and grammar checker covering over 15 languages,
        including English, German, Russian, Chinese, and others.

        <br/>

        It improves the quality of texts written using IntelliJ Platform IDEs
        by providing intelligent spelling and grammar checking.

        <br/>

        The plugin supports natural language constructs wherever they are: Kotlin,
        Python, and Java (including literals and docs), comments, Markdown, XML, and plain text.

        <br/>

        Under the hood, it uses LanguageTool, to provide you with the unrivaled
        performance and accuracy of the leading proofreading and grammar checking engine.

        <br/>

        Note, that all verification is performed locally, inside your IDE. The plugin does not
        send any of your data anywhere.

        <br/>

        To enable spellchecking or support for other languages (by default English is enabled)
        Use the Grazi settings located at Settings -> Tools -> Grazi
    ]]></description>

    <depends optional="true" config-file="markdown.xml">org.intellij.plugins.markdown</depends>
    <depends optional="true" config-file="kotlin.xml">org.jetbrains.kotlin</depends>
    <depends optional="true" config-file="python.xml">com.intellij.modules.python</depends>
    <depends optional="true" config-file="java.xml">com.intellij.modules.java</depends>

    <project-components>
        <component>
            <implementation-class>tanvd.grazi.ide.notification.GraziNotificationComponent</implementation-class>
        </component>
    </project-components>

    <application-components>
        <component>
            <implementation-class>tanvd.grazi.GraziPlugin</implementation-class>
        </component>
    </application-components>


    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="tanvd.grazi.GraziConfig"/>

        <localInspection displayName="Grazi proofreading inspection" groupName="Grazi" enabledByDefault="true"
                         shortName="GraziInspection" implementationClass="tanvd.grazi.ide.GraziInspection" level="TYPO"/>

        <applicationConfigurable groupId="tools" instance="tanvd.grazi.ide.ui.GraziConfigurable"
                                 id="reference.settingsdialog.project.grazi"
                                 key="grazi.name" bundle="messages.GraziBundle"/>

        <nameSuggestionProvider id="SpellCheckerSuggestions" implementation="tanvd.grazi.spellcheck.SpellCheckSuggestions" order="first"/>

    </extensions>

    <extensionPoints>
        <extensionPoint qualifiedName="tanvd.grazi.languageSupport" interface="tanvd.grazi.ide.language.LanguageSupport"/>
    </extensionPoints>

    <extensions defaultExtensionNs="tanvd.grazi">
        <languageSupport implementation="tanvd.grazi.ide.language.plain.PlainTextSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.plain.UnknownTypeSupport"/>

        <languageSupport implementation="tanvd.grazi.ide.language.XmlSupport"/>

        <languageSupport implementation="tanvd.grazi.ide.language.CommentsSupport"/>
    </extensions>
</idea-plugin>
