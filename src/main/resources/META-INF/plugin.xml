<idea-plugin>
    <id>tanvd.grazi</id>
    <name>Grazi</name>

    <depends optional="true" config-file="markdown.xml">org.intellij.plugins.markdown</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection displayName="Mistake in an English text" groupName="English"
                         enabledByDefault="true"
                         implementationClass="tanvd.grazi.ide.GraziInspection"/>
        <projectService serviceImplementation="tanvd.grazi.GraziToolProjectSettings"/>
        <projectConfigurable groupId="tools" instance="tanvd.grazi.GraziToolConfigurable"
                             id="reference.settingsdialog.project.grazi"
                             key="grazi.name" bundle="messages.HCLBundle"/>
    </extensions>

    <extensionPoints>
        <extensionPoint qualifiedName="tanvd.grazi.languageSupport" interface="tanvd.grazi.ide.GraziLanguageSupport"/>
    </extensionPoints>

    <extensions defaultExtensionNs="tanvd.grazi">
        <languageSupport implementation="tanvd.grazi.ide.GraziPlainTextSupport"/>
    </extensions>

    <extensions defaultExtensionNs="tanvd.grazi">
        <languageSupport implementation="tanvd.grazi.ide.JavaDocSupport"/>
    </extensions>
</idea-plugin>
