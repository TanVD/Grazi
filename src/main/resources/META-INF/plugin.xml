<idea-plugin>
    <id>tanvd.grazi</id>
    <name>Grazi</name>
    <vendor>TanVD</vendor>

    <depends optional="true" config-file="markdown.xml">org.intellij.plugins.markdown</depends>
    <depends optional="true">org.jetbrains.kotlin</depends>

    <application-components>
        <component>
            <implementation-class>tanvd.grazi.ui.GraziSettingsComponent</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="tanvd.grazi.grammar.GrammarEngineService"/>
        <applicationService serviceImplementation="tanvd.grazi.ui.GraziApplicationSettings"/>

        <localInspection displayName="Grazi proofreading inspection" groupName="Grazi" enabledByDefault="true"
                         shortName="GraziInspection" implementationClass="tanvd.grazi.ide.GraziInspection" level="TYPO"/>

        <applicationConfigurable groupId="tools" instance="tanvd.grazi.ui.GraziToolConfigurable"
                                 id="reference.settingsdialog.project.grazi"
                                 key="grazi.name" bundle="messages.Grazi"/>

    </extensions>

    <extensionPoints>
        <extensionPoint qualifiedName="tanvd.grazi.languageSupport" interface="tanvd.grazi.ide.language.LanguageSupport"/>
    </extensionPoints>

    <extensions defaultExtensionNs="tanvd.grazi">
        <languageSupport implementation="tanvd.grazi.ide.language.PlainTextSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.JavaDocSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.KDocSupport"/>
<!--        <languageSupport implementation="tanvd.grazi.ide.language.HtmlSupport"/>-->
        <languageSupport implementation="tanvd.grazi.ide.language.MarkdownSupport"/>
        <languageSupport implementation="tanvd.grazi.ide.language.CommentsSupport"/>
    </extensions>
</idea-plugin>
